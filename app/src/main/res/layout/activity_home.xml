<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swRefreshRecords"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backup.view.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"
            android:id="@+id/tv_welcome_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_activity_txt_welcome_user_with_argument"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_records"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_records_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:layout_gravity="center"/>
        </FrameLayout>

        <Button
            android:id="@+id/btn_back_up"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_activity_btn_back_up"/>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>