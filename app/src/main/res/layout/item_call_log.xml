<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/tv_call_log_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sdt: abc"/>

    <TextView
        android:id="@+id/tv_call_log_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loai cuoc goi: abc"/>

    <TextView
        android:id="@+id/tv_call_log_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngay thuc hien: abc"/>

    <TextView
        android:id="@+id/tv_call_log_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoi gian: abc"/>
</LinearLayout>